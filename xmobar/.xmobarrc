
Config { font = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopW L 90 
       , commands = [ Run Weather "KMDW" ["-t", "CHICAGO: <tempC> C","-L","10","-H","25","--normal","green","--high","red","--low","lightblue"] 36000
                    , Run MultiCpu ["-t", "CPU: <autototal>", "-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run Date "%a %b %_d %H:%M" "date" 10
                    , Run StdinReader
                    , Run BatteryP ["BAT0"] ["-t", "<acstatus>", "-L", "10", "-H", "80", "-l", "red", "-h", "green", "--", "-O", "<fc=green>Charging</fc>", "-o", "Battery: <left>%"] 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %multicpu% | %memory% * %swap%    <fc=#ee9a00>%date%</fc> | %KMDW% | %battery%  "
       , allDesktops = True
       }
